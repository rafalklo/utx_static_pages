<h1>Listing pages</h1>

<table class="table">
  <tr>
    <th class="first">Title</th>
    <th>Content</th>
    <th>Locale</th>
    <th>Permalink</th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%=h page.title %></td>
    <td><%=h page.content[0..25] if page.content %></td>
    <td><%=h page.locale %></td>
    <td><%=h page.permalink %></td>
    <td><%= link_to 'Show', "/pages/#{page.permalink}" %>&nbsp;&nbsp;|&nbsp;&nbsp; 
    <%= link_to 'Edit', edit_admin_page_path(page) %>&nbsp;&nbsp;|&nbsp;&nbsp; 
    <%= link_to 'Destroy', admin_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_admin_page_path %>
